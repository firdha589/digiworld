<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"

        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:background="#0ca2f2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/myorder_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop">

            </ImageView>
            <Button
                android:id="@+id/show_tracking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="tracking\ndetails"
                android:textAllCaps="false"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

             </Button>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/my_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="13dp"
                android:textStyle="bold"
                >

            </TextView>
            <TextView
                android:id="@+id/my_order_purches_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="purches date"
                android:layout_marginTop="15dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp">

            </TextView>
            <TextView
                android:id="@+id/my_order_paid_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="paid price"
                android:layout_marginTop="15dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp">

            </TextView>
            <TextView
                android:id="@+id/my_order_estimate_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimate delevery"
                android:layout_marginTop="15dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp">

            </TextView>

        </LinearLayout>

    </LinearLayout>





    </androidx.cardview.widget.CardView>


</RelativeLayout>