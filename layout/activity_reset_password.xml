<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#0b07f2"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/bangers"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#29e2f0"
        android:layout_below="@+id/relative1"
        android:layout_height="match_parent">


    <EditText
        android:id="@+id/phone_number_reset"

        android:layout_marginTop="15dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:inputType="number"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number..">

    </EditText>
    <TextView
        android:id="@+id/question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions ?"
        android:layout_below="@+id/phone_number_reset"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="30dp">

    </TextView>
    <EditText
        android:id="@+id/question_01"
        android:layout_below="@+id/question_title"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what is your first school?">

    </EditText>
    <EditText
        android:id="@+id/question_02"
        android:layout_below="@+id/question_01"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what is your pet name?">

    </EditText>
    <EditText
        android:id="@+id/question_03"
        android:layout_below="@+id/question_02"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what is your mother's name?">

    </EditText>
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_below="@+id/question_03"
        android:text="Verify"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textAllCaps="false">

    </Button>
    </RelativeLayout>



</RelativeLayout>