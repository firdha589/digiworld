<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellersRegistrationActivity">

    <ImageView
        android:id="@+id/seller_registration_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"

        >

    </ImageView>

    <TextView
        android:id="@+id/seller_regi_form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="Seller Registration\n Form"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold">

    </TextView>






    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:layout_below="@+id/seller_registration_img"
        >

    </EditText>
    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:layout_below="@id/seller_name"
        >

    </EditText>

    <EditText
        android:id="@+id/seller_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:layout_below="@id/seller_phone"
        >

    </EditText>
    <EditText
        android:id="@+id/seller_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:layout_below="@id/seller_email"
        >

    </EditText>
    <EditText
        android:id="@+id/seller_shop_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shop-Business Address"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:layout_below="@id/seller_password"
        >

    </EditText>
    <Button
        android:id="@+id/seller_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button">

    </Button>
    <TextView
        android:id="@+id/seller_allready_have_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Have Account ?"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="38dp"
        android:textSize="18dp"
        android:layout_alignParentRight="true">

    </TextView>



</RelativeLayout>