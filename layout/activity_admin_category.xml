<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="27dp">

    </TextView>
    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mens_fashion"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/tshirts">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men's \nfashion"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/babies_kids"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/hild_friendly_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Babies and \n Kids"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/women_fashion"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:src="@drawable/female_dresses">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women's \nFashion"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/health_beauti"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_tag_faces_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health and \n Beauty"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>



        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear_category_layout"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/srilankan_tradition"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_masks_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Srilankan \n Traditional"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/electronics_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/laptops">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics \nDevices"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/watches_accessories"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/watches">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watches and \nAccessories"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/sports_outdoor"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/sports_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports and \nOutdoors"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>





    </LinearLayout>
    <Button
        android:id="@+id/maintain_products_btn"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear3_category_layout"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:text="Maintain Products">

    </Button>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_below="@+id/maintain_products_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:text="Check new Orders">

    </Button>
    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_below="@+id/check_orders_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:text="logout">

    </Button>


</RelativeLayout>